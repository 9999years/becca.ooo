{% extends "_partial/base.njk" %}
{% block pre_content %}
<canvas id="main-canvas"></canvas>
<div id="controls">
	<p>
	<button id="stop-button">Pause</button>
	<button id="toggle-button">Toggle modes</button>
	<button id="reset-button">Reset</button>
	<button id="color-button">Toggle color schemes</button>
	<p>
	Speed:
	<br><input type="range" id="speed-range" min="1" max="1000" value="250"></input>
	<p>
	Line thickness:
	<br><input type="range" id="threshold-range" min="0.5" max="100" value="2"></input>
	<p>
	Grid spacing:
	<br><input type="range" id="grid-spacing" min="25" max="499" value="150"></input>
	<p>
	Wobble amplitude:
	<br><input type="range" id="amplitude-range" min="0" max="250" value="15"></input>
	<p><input type="checkbox" id="grid-toggle" checked name="grid-toggle">
	<label for="grid-toggle">Draw grid</label>
	<p><input type="checkbox" id="samples-toggle" name="samples-toggle">
	<label for="samples-toggle">Draw samples</label>
	<p><input type="checkbox" id="cursor-toggle" checked name="cursor-toggle">
	<label for="cursor-toggle">Draw cursor circle</label>
	<p>
	Drag the blue circle around with your mouse (or finger), or
	click on the animation to have it follow your mouse.
</div>
{% endblock %}
