$bg ?= #fff
$txt ?= #000
$font-size ?= 16px
// highlight
$hi ?= #1741e8
$light ?= #ededff
$medium ?= #828282
$margin ?= 25px
$body-width ?= 800px
$toc-width ?= 300px

$rel-link-margin ?= 30px

constrained()
  margin: auto
  max-width: $body-width

standard()
  font: $font-size \
    "Segoe UI", // Windows
    "-apple-system", "San Francisco", "Helvetica", // Apple
    "Noto Sans", // Google
    "Geneva", "Helvetica Neue", "Helvetica", "Helvetica Neue LT", "Arial",
    sans-serif // backup for weird platforms
  background-color: $bg
  color: $txt

striped($color)
  border-collapse: collapse

  & tr:nth-child(even)
    background-color: rgba($color, 0.1)
